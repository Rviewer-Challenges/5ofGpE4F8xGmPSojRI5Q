<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->

  <style name="Theme.RssReader" parent="Base.Theme.RssReader">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <item name="android:colorBackground">@color/white</item>
    <item name="colorSurface">@color/black</item>

    <item name="android:textColorPrimary">#000000</item>

    <item name="colorOnBackground">@color/black</item>

    <!-- Status bar color. -->
    <item name="colorPrimaryDark" tools:targetApi="23">@color/light_gray</item>
  </style>

  <style name="Base.Theme.RssReader" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
    <item name="appBarLayoutStyle">@style/AppBarStyle</item>
    <item name="android:textViewStyle">@style/TextView</item>

    <item name="cardViewStyle">@style/CardViewStyle</item>

    <!-- Color Active Switch-->
    <item name="colorControlActivated">@color/primary</item>

    <item name="switchStyle">@style/SwitchStyle</item>

    <item name="android:windowBackground">?android:colorBackground</item>
    <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

  </style>
</resources>